		System.out.println("------------------AREA OF THE TRIANGLE--------------------");
		
		Scanner base = new Scanner(System.in);
		System.out.print("Enter the base of the triangle:");
		
		double bottom = base.nextDouble();
		
		Scanner length = new Scanner(System.in);
		System.out.print("Enter the height if the triangle:");
		
		double height = base.nextDouble();
		
		double area = bottom * height;
		
		double answer = area/2;
		
		System.out.println("The area of the trainagle is : "+answer);
		
