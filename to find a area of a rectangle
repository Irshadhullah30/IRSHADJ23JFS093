import java.util.Scanner;
public class Areaofarectangle {

	public static void main(String[] args) {
		System.out.println("=------TO FIND A AREA OF A RECTANGLR--------");
		Scanner length = new Scanner(System.in);
		System.out.println("Enter the length of the rectangle:");
		
	    double len = length.nextDouble();
	    
	    Scanner breadth = new Scanner(System.in);
	    System.out.println("Enter the breadth of the rectangle:");
	    
	    double bdt = breadth.nextDouble();
	    
	    double answer = len*bdt;
	    
	    System.out.println("The area of the rectangle is:"+ answer);
	    
	    System.out.print("-------------Done by irshadhullah---------------");
	}
	
}
